<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anuj.glug1.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ff000000"

            >
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="225dp">

                <ImageView
                    android:src="@drawable/kali"
                    android:scaleType="fitCenter"
                    android:layout_height="225dp"
                    android:layout_width="fill_parent"/>

                <TextView
                    android:text="GLUG_REVA \n \n \nGLUGs - GNU/Linux user groups are means of spreading the idea of free software and philosophy of free software"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:textColor="#ffffffff"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="center"/>
                <!--    <com.hanks.htextview.fade.FadeTextView
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="#ffffffff"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:letterSpacing="0.08"
                        android:lineSpacingMultiplier="1.3"
                        android:text="GLUG_REVA \n \n \nGLUGs - GNU/Linux user groups are means of spreading the idea of free software and philosophy of free software"
                        app:animationDuration="1500"/>-->
            </FrameLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:fadingEdge="vertical"
                android:elevation="5dp"
                android:ellipsize="middle"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/button"
                android:text="REGISTER NOW!"
                android:textColor="#FAFAFA"
                android:textSize="26dp"
                android:textAlignment="center"
                android:background="@drawable/reg" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="920dp"
                android:id="@+id/int1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/slidingimagee"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="#ff000000"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:elevation="4dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="880dp"
                android:id="@+id/int2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:elevation="4dp"
                />

            <TextView
                android:text="We are a team of college students working as an organisation like it's our full time job. Any amount of help, support and development is greatly appreciated."
                android:id="@+id/textview7"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/bkr"
                android:textColor="#FAFAFA"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
